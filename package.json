{
  "name": "@sendly/cli",
  "version": "3.6.0",
  "type": "module",
  "description": "Sendly CLI - Send SMS from your terminal",
  "author": "Sendly <support@sendly.live>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sendly": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "dev": "tsc -b --watch",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "sendly",
    "dirname": "sendly",
    "commands": "./dist/commands",
    "hooks": {
      "command_not_found": "./dist/hooks/command-not-found"
    },
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "sms": {
        "description": "Send and manage SMS messages"
      },
      "keys": {
        "description": "Manage API keys"
      },
      "webhooks": {
        "description": "Manage and test webhooks"
      },
      "logs": {
        "description": "View logs and debug"
      },
      "config": {
        "description": "Manage CLI configuration"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^3.27.0",
    "@oclif/plugin-help": "^6.2.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "conf": "^12.0.0",
    "inquirer": "^9.2.23",
    "open": "^10.1.0",
    "ora": "^8.0.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@oclif/test": "^3.2.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "oclif": "^4.14.0",
    "shx": "^0.3.4",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "sendly",
    "sms",
    "cli",
    "messaging",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sendly/sendly-cli.git"
  },
  "homepage": "https://sendly.live/docs/cli",
  "bugs": {
    "url": "https://github.com/sendly/sendly-cli/issues"
  }
}
